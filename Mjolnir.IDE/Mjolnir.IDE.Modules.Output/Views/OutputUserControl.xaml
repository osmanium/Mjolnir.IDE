<UserControl x:Class="Mjolnir.IDE.Modules.Output.Views.OutputUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mjolnir.IDE.Modules.Output.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBox Margin="5" Text="{Binding Path=Text, Mode=OneWay}" 
             IsReadOnly="True" 
             BorderBrush="White" 
             Background="Transparent"
             Foreground="{DynamicResource OutputBrush}"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             AcceptsReturn="True" 
			 FontFamily="Consolas"
             BorderThickness="0"
             ScrollViewer.VerticalScrollBarVisibility="Visible">
    </TextBox>
</UserControl>